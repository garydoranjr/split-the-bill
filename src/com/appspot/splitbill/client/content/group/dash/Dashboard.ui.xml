<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.wide {
			width: 100%;
		}
		.banner {
			width: 100%;
			background-color: #92C1F0;
			font-weight: bold;
			padding: 5px;
			text-align: center;
		}
		.bigLabel {
			font-size: 18px;
		}
		.smallLabel {
			font-size: 14px;	
		}
	</ui:style>
	<g:VerticalPanel ui:field="panel" addStyleNames='{style.wide}' >
		<g:Label ui:field="nameLabel" addStyleNames='{style.bigLabel} {style.banner}' />
		<g:Label ui:field="descLabel" addStyleNames='{style.smallLabel} {style.banner}' />
		<g:FlexTable ui:field="dashTable" addStyleNames='{style.wide}' />
	</g:VerticalPanel>
</ui:UiBinder> 