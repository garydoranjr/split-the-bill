	xmlns:e="urn:import:com.appspot.splitbill.client.widgets.editor" >
	<ui:style>
	</ui:style>
	<g:DecoratorPanel>
		<g:VerticalPanel>
			<g:Label>Group Name:</g:Label>
			<e:MinimumLengthTextBox ui:field="nameBox" minLength='3'/>
			<g:Label>Description:</g:Label>
			<g:TextArea ui:field="descBox" />
			<g:HorizontalPanel>
				<g:Button ui:field="saveButton" >Save</g:Button>
				<g:Button ui:field="cancelButton" >Cancel</g:Button>
