<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="com.appspot.splitbill.client.content.group.Settings.MyStyle">
		.label {
			font-size: 16px;
		}
		.boldLabel {
			font-weight: bold;
			font-size: 16px;
		}
	</ui:style>
	<g:VerticalPanel ui:field="panel" >
		<g:FlexTable ui:field="infoTable" />
		<g:HorizontalPanel ui:field="editGroupPanel" >
			<g:Button ui:field="editButton" >Edit Group</g:Button>
			<g:Button ui:field="deleteButton" >Delete Group</g:Button>
		</g:HorizontalPanel>
		<g:HorizontalPanel ui:field="emailFreqPanel" >
			<g:Label ui:field="emailFreqLabel" addStyleNames='{style.boldLabel}' >Send Email Updates:</g:Label>
			<g:ListBox ui:field="emailFreqBox" />
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 