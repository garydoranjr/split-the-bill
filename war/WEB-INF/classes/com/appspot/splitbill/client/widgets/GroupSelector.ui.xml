<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.content{
			width: 200px;
		}
		.label{
			width: 100%;
			background-color: #D0E4F6;
  			text-align: center;
  			font-size: 22px;
			font-style: normal;
			font-variant: normal;
  			font-weight: bold;
  			padding-top: 3px;
  			padding-bottom: 3px;
		}
		.newGroupLabel{
			display: block;
			font-size: 16px;
			font-weight: bold;
			padding-left: 3px;
		}
		.table {
			width: 100%;
		}
	</ui:style>
	<g:DecoratorPanel>
		<g:VerticalPanel styleName='{style.content}' >
		<g:Label styleName='{style.label}' >Groups</g:Label>
		<g:Button ui:field="newGroupButton">
			<table><tbody><tr>
				<td><img src="img/plus.png" /></td>
				<td width="100%"><span class='{style.newGroupLabel}' >Create Group</span></td>
			</tr></tbody></table>
		</g:Button>
		<g:VerticalPanel ui:field="table" styleName='{style.table}' />
		</g:VerticalPanel>
	</g:DecoratorPanel>
</ui:UiBinder> 