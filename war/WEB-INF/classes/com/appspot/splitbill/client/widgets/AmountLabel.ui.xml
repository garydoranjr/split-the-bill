<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="com.appspot.splitbill.client.widgets.AmountLabel.MyStyle" >
		.label {
			font-size: 16px;
			font-weight: bold;
			padding-top: 3px;
			padding-bottom: 3px;
		}
		.neg {
			color: red;
		}
		.pos {
			color: green;
